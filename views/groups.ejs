<!-- views/groups.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCIM Server Groups</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; margin: 0; background-color: #f8f9fa; }
        .header { background-color: #333; color: white; padding: 10px 20px; display: flex; justify-content: space-between; align-items: center; }
        .header-nav a { color: white; text-decoration: none; margin-left: 15px; }
        .header-nav a:hover { text-decoration: underline; }
        .header-user-info { font-size: 0.9em; }
        .header button { background: #555; color: white; border: none; padding: 8px 12px; cursor: pointer; border-radius: 4px; }
        .container { max-width: 960px; margin: 2em auto; padding: 2em; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.05); }
        h1 { border-bottom: 1px solid #dee2e6; padding-bottom: 10px; font-weight: 600; color: #343a40; }
        table { border-collapse: collapse; width: 100%; margin-top: 2em; }
        th, td { border: 1px solid #dee2e6; padding: 12px; text-align: left; vertical-align: top; }
        th { background-color: #f1f3f5; }
        .group-row { cursor: pointer; }
        .group-row:hover { background-color: #f8f9fa; }
        .members-row { display: none; background-color: #fdfdfd; }
        .members-list { padding-left: 40px; margin: 10px 0; }
        .members-list li { padding: 5px 0; }
    </style>
</head>
<body>

    <div class="header">
        <div class="header-user-info">
            Logged in as: <strong><%= user.name %></strong> (<%= user.email %>)
        </div>
        <div class="header-nav">
            <a href="/ui/users">Users View</a>
            <form action="/logout" method="post" style="display: inline;">
                <button type="submit">Logout</button>
            </form>
        </div>
    </div>

    <div class="container">
        <h1>SCIM Server Group List</h1>
        <p>Found <strong><%= groups.length %></strong> group(s). Click on a row to expand/collapse members.</p>
        
        <table>
            <thead>
                <tr>
                    <th>Group ID</th>
                    <th>Display Name</th>
                    <th>Member Count</th>
                </tr>
            </thead>
            <tbody id="groups-table-body">
                <% if (groups.length > 0) { %>
                    <% groups.forEach(function(group) { %>
                        <tr class="group-row" data-group-id="<%= group.id %>">
                            <td><code><%= group.id %></code></td>
                            <td><%= group.displayName %></td>
                            <td><%= group.members.length %></td>
                        </tr>
                        <tr class="members-row" id="members-of-<%= group.id %>">
                            <td colspan="3">
                                <% if (group.members.length > 0) { %>
                                    <h4>Members:</h4>
                                    <ul class="members-list">
                                        <% group.members.forEach(function(member) { %>
                                            <li>
                                                <strong><%= member.display %></strong> (ID: <code><%= member.value %></code>)
                                            </li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    <p style="padding-left: 20px;">This group has no members.</p>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3" style="text-align: center; padding: 2em;">No groups found. Try pushing one from Okta.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tableBody = document.getElementById('groups-table-body');
            tableBody.addEventListener('click', function(event) {
                // Find the closest parent 'group-row' from the click target
                const groupRow = event.target.closest('.group-row');
                if (!groupRow) {
                    return; // Exit if the click was not on a group row
                }

                const groupId = groupRow.dataset.groupId;
                if (!groupId) {
                    return;
                }

                const membersRow = document.getElementById('members-of-' + groupId);
                if (membersRow) {
                    // Toggle the display style of the members row
                    const isHidden = membersRow.style.display === 'none' || membersRow.style.display === '';
                    membersRow.style.display = isHidden ? 'table-row' : 'none';
                }
            });
        });
    </script>

</body>
</html>